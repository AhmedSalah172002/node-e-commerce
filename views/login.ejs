<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Document</title>
</head>
<body>
  <nav class="navbar mb-5 navbar-expand-lg bg-body-tertiary">
    <div class="container">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto ">
          
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>
          <% if(isUser){ %>
          <li class="nav-item">
            <a class="nav-link" href="/cart">Card</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/orders">Order</a>
          </li>
          <% }else{ %>
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/signup">Signup</a>
          </li>
          <% } %>
          <% if(isAdmin){ %>
            <li class="nav-item">
              <a class="nav-link" href="/admin/add">Add Product</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/orders">Manage Orders</a>
            </li>
            <% } %>
        </ul>
      </div>
    </div>
  </nav>

      <div class="product">
        <div class="container">
            <form action="/login" method="post">
                <div class="form-group mb-3">
                  <label for="exampleInputEmail1">Email address</label>
                  <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                  <% let email= loginError.find((err)=>err.param=='email') %>
                  <% if(email){ %>
                    <p class="alert alert-danger">
                      <%= email.msg %>
                    </p>
                    <% }%>
                </div>
                <div class="form-group mb-3">
                  <label for="exampleInputPassword1">Password</label>
                  <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                  <% let password= loginError.find((err)=>err.param=='password') %>
                  <% if(password){ %>
                    <p class="alert alert-danger">
                      <%=password.msg %>
                    </p>
                    <% }%>
                </div>
                <button type="submit" class="btn btn-primary m-auto">Submit</button>
              </form>
              <br>
              <% if(authError){ %>
                <p class="alert alert-danger">
                  <%= authError %>
                </p>
            <% } %>
        </div>
      </div>

      <script src="assets/js/bootstrap.min.js"></script>
      <script src="assets/js/popper.min.js"></script>
</body>
</html>